<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.co.scuff.android" >

    <!-- internet and storage -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
         The following two permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- wake lock for location services -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- recover on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- to get phone number -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".util.ScuffApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterDriverActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_register_driver"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ui.PassengerHomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_passenger_home"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.SelectRouteActivity"
            android:label="@string/title_activity_select_route" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCe0FMB85HYFERr1oz53-oqAOUI7y4EGMg" />

        <activity
            android:name=".ui.DriverHomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_driver_home"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>

        <meta-data
            android:name="AA_MODELS"
            android:value="                 nz.co.scuff.data.journey.Journey, nz.co.scuff.data.journey.Waypoint, nz.co.scuff.data.journey.JourneySnapshot,                 nz.co.scuff.data.family.Parent, nz.co.scuff.data.family.Child, nz.co.scuff.data.family.ChildParent,                 nz.co.scuff.data.school.School, nz.co.scuff.data.school.Route,                 nz.co.scuff.data.school.ParentSchool, nz.co.scuff.data.school.ChildSchool, nz.co.scuff.data.school.ParentRoute" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Scuff.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="18" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="nz.co.scuff.android.util.TimestampSerializer" />
        <meta-data
            android:name="AA_DB_RESET"
            android:value="true" />

        <!--
            <receiver android:firstName=".gps.GPSBootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:firstName="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        -->
        <receiver
            android:name=".gps.PassengerAlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name=".gps.DriverAlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>

        <service
            android:name=".gps.DriverIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".gps.PassengerIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".gps.DriverLocationIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".data.UserIntentService"
            android:exported="false" >
        </service>
    </application>

</manifest>
